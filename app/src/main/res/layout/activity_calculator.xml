<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity"
    android:background="@color/black">


    <TextView
        android:id="@+id/mainBody"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/main__body__height"
        android:gravity="right"
        android:text="123456789"
        android:textColor="@color/white"
        android:textSize="80sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/zero_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout3"
        android:orientation="vertical"
        android:background="@color/white"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout__height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num7"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num8"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num9"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="9"
                android:textSize="50sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout__height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num6"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num5"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num4"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout__height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num1"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num2"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/num3"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="3"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout__height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num0"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:gravity="center"
                android:textSize="50sp"/>

            <TextView
                android:id="@+id/numDot"
                android:layout_width="@dimen/num__width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="."
                android:textSize="50sp" />

        </LinearLayout>


    </GridLayout>

    <LinearLayout
        android:id="@+id/tableLayout2"
        android:layout_width="110dp"
        android:layout_height="@dimen/zero_dp"
        android:background="@color/red"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBody"
        app:layout_constraintVertical_bias="0.0"
        >


        <TextView
            android:id="@+id/division"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell__height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell__height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Ð¥"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/minus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell__height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell__height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/ea"
            android:layout_width="match_parent"
            android:layout_height="@dimen/cell__height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="="
            android:textColor="@color/white"
            android:textSize="50sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/tableLayout3"
        android:layout_width="@dimen/zero_dp"
        android:layout_height="@dimen/layout__height"
        android:background="@color/red_light"
        app:layout_constraintEnd_toStartOf="@+id/tableLayout2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainBody">


        <TextView
            android:id="@+id/clearMainBody"
            android:layout_width="@dimen/cell__width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="C"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/change"
            android:layout_width="@dimen/cell__width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+/-"
            android:textSize="50sp" />

        <TextView
            android:id="@+id/percent"
            android:layout_width="@dimen/cell__width"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="%"
            android:textSize="50sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>